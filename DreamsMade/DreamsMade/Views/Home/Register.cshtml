@using DreamsMade.Models
@model User

@using (Html.BeginForm("Register", "Home", FormMethod.Post))
{
    <div class="container d-flex justify-content-center align-items-center mt-5">
        <div class="row">
            <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
                <div class="card shadow">
                    <img src="https://images.unsplash.com/photo-1601134917279-ef70a0a90f18?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80" alt="" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title text-center">Register</h5>
                        <form action="/register" class="validated-form" method="POST" novalidate>
                            <div class="mb-3">
                                <label class="form-label" for="name">Username</label>
                                <input class="form-control" type="text" name="name" id="name" autofocus required>
                                <div class="valid-feedback">
                                    Cheked!
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="password">Password</label>
                                <input class="form-control" type="password" name="password" id="password" required>
                                <div class="valid-feedback">
                                    Cheked!
                                </div>
                            </div>
                            <button class="btn btn-success btn-block" value="Register">Register</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@model List<DreamsMade.Models.Post>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Dreams";
}

<div class="container">
        <h1 class="d-flex justify-content-center my-5">Explore the Dreams</h1>
        @foreach (var post in @Model)
        {
            <div class="card mb-3 card-show">
                <div class="row">
                    <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
                        <img src="data:image/png;base64,@post.image" class="img-fluid" >
                    </div>
                    <div class="col-md-8">
                        <div class="card-body" style="border: none;">
                            <h5 class="card-title">
                                @post.title
                            </h5>
                            <p class="card-text">
                                @post.text
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    By: @post.user.name
                                </small>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        }
</div>

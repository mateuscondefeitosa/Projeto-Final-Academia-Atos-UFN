@model List<DreamsMade.Models.Post>


@{
    ViewData["Title"] = "My Page";
}


<div class="container">
        <h1 class="d-flex justify-content-center my-5">My Dreams</h1>
        @foreach (var post in @Model)
        {
            <div class="card mb-3 card-show">
                <div class="row">
                    <div class="col-md-4">
                        <img src="@post.image" class="img-fluid">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body" style="border: none;">
                            <a href="@Url.Action("Post","Home", new { id = @post.id })"><h5 class="card-title">
                                @post.title
                            </h5></a>
                            <p class="card-text">
                                @post.text
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    @post.user.name
                                </small>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        }
</div>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DreamsMade</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="~/DreamsMade.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/navbar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CssIsolationMvc.styles.css" />
    <script src="https://code.jquery.com/jquery-1.9.1.min.js"></script>
</head>
<body class="d-flex flex-column vh-100">
    <header class="sticky-top">
        <nav class="navbar navbar-expand-md navbar-dark bg-dark bg-gradient">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><span id="nav-span1">Dreams</span><span id="nav-span2">Made</span></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse justify-content-end">
                    <div class="navbar-nav flex-grow-1">
                            <a class="nav-link " id="navlink" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            <a class="nav-link" id="navlink" asp-area="" asp-controller="Home" asp-action="Dreams">Dreams</a>
                        @if(@User.Identity.IsAuthenticated)
                        {
                            <a class="nav-link" id="navlink" asp-area="" asp-controller="Home" asp-action="MyPage">My Page</a>
                            <a class="nav-link" id="navlink" asp-area="" asp-controller="Home" asp-action="NewPost">New Post!</a>
                        }
                    </div>
                    <div class="navbar-nav ml-auto">
                       @if(!@User.Identity.IsAuthenticated)
                        {
                            <a href="@Url.Action("Register", "Home")" class="nav-link" id="navlink">Register</a> 
                            <a href="@Url.Action("Login", "Home")" class="nav-link" id="navlink">Login</a>
                        }
                        else
                        {
                            <a href="@Url.Action("DeleteUser", "Home")" class="nav-link" id="navlink">Delete Acc</a>    
                            <a href="@Url.Action("Logout", "Home")" class="nav-link" id="navlink">Logout</a>    
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>
    
    <main role="main">
        @RenderBody()
    </main>


    <footer class="footer bg-dark mt-auto text-center py-0" id="footer">
        <div class="container text-muted">
            Academia .NET ATOS/UFN &copy; 2022 - DreamsMade - Aluno: <a href="https://github.com/mateuscondefeitosa"> Mateus Conde Feitosa.
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
